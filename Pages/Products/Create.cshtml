@page
@model RazorPageWeb.Pages.Products.CreateModel
@{
}
<form method="post" asp-page-handler="Add">
    <div class="form-group">
        <label for="Name">Tên sản phẩm:</label>
        <input type="text" id="Name" name="product.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Mô tả:</label>
        <input type="text" id="Description" name="product.Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Price">Giá:</label>
        <input type="number" id="Price" name="product.Price" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
</form>